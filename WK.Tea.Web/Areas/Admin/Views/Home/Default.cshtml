<script>
    layui.use(['layer', 'echarts'], function () {
        var $ = layui.jquery,
            layer = layui.layer,
            echarts = layui.echarts,
            admin = layui.admin

        /**
         * 报表功能
         */
        var echartsRecords = echarts.init(document.getElementById('echarts-records'), 'walden');
        var echartsRecords1 = echarts.init(document.getElementById('echarts-records1'), 'walden');
        var optionRecords = {
            tooltip: {
                trigger: 'axis'
            },
            legend: {
                data: ['订单数量']
            },
            grid: {
                left: '3%',
                right: '4%',
                bottom: '3%',
                containLabel: true
            },
            toolbox: {
                feature: {
                    saveAsImage: {}
                }
            },
            xAxis: {
                type: 'category',
                boundaryGap: false,
                data: []
            },
            yAxis: {
                type: 'value'
            },
            series: [
                {
                    name: '订单数量',
                    type: 'line',
                    data: []
                }
                //,
                //{
                //    name: '订单金额',
                //    type: 'line',
                //    data: [220, 182, 191, 234, 290, 330, 310]
                //}
            ]
        };

        init();


        // echarts 窗口缩放自适应
        window.onresize = function () {
            echartsRecords.resize();
        }


        function init() {
            admin.req({
                url: '/api/order/statics'
                , type: 'get'
                , data: {}
                , done: function (res) {
                    $("#todaycount").text(res.data.total.split('|')[0]);
                    $("#todayamount").text(res.data.total.split('|')[1]);
                    $("#weekcount").text(res.data.total.split('|')[2]);
                    $("#weekamount").text(res.data.total.split('|')[3]);

                    optionRecords.xAxis.data = res.data.orderDate;
                    optionRecords.series[0].data = res.data.orderCount;
                    echartsRecords.setOption(optionRecords);

                    optionRecords.series[0].data = res.data.orderAmount;
                    optionRecords.legend.data = ['订单金额']
                    optionRecords.series[0].name = '订单金额'
                    echartsRecords1.setOption(optionRecords);
                }
            });
        }

    });
</script>